{
  "name": "tinyhouse",
  "private": true,
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/webpack": "^5.28.0",
    "@types/webpack-node-externals": "^2.5.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fork-ts-checker-webpack-plugin": "^6.2.7",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^2.0.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-pnp-externals": "^1.1.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "update-sdk": "yarn dlx @yarnpkg/pnpify --sdk vscode",
    "prepare": "husky install",
    "clean": "yarn workspaces foreach run clean",
    "build": "yarn workspaces foreach run build",
    "test:frontend": "yarn workspace @tinyhouse/web test",
    "test:backend": "jest",
    "test:watch": "yarn test:backend --watch",
    "test:cov": "yarn test:backend --coverage",
    "lint": "eslint \"packages/*/{src,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "workspace:generate": "cd $INIT_CWD && nest g",
    "workspace:clean": "cd $INIT_CWD && rimraf build && rimraf tsconfig.tsbuildinfo",
    "workspace:build": "cd $INIT_CWD && webpack --config webpack.config.ts",
    "workspace:re-build": "cd $INIT_CWD && yarn clean && yarn build",
    "workspace:start": "cd $INIT_CWD && node build/main.js",
    "workspace:test": "cd $INIT_CWD && jest",
    "workspace:test:debug": "cd $INIT_CWD && jest --runInBand --no-cache",
    "workspace:lint": "cd $INIT_CWD && eslint \"{src,test}/**/*.ts\" --fix",
    "workspace:format": "cd $INIT_CWD && prettier --write \"{src,test}/**/*.ts\""
  },
  "lint-staged": {
    "packages/*/{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
